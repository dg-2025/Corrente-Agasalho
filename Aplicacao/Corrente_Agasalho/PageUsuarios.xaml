<Page x:Class="PageUsuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.openxmlformats.org/expression/blend/2008" 
      xmlns:local="clr-namespace:Corrente_Agasalho"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="PageUsuarios"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Gerenciar Usuários"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource CorTextoPrincipal}"/>
            <TextBlock Text="Cadastre, edite e defina permissões de acesso ao sistema."
                       FontSize="16"
                       Foreground="{StaticResource CorTextoSecundario}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Style="{StaticResource EstiloCard}" 
                    Margin="0,0,20,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Usuários Cadastrados"
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource CorTextoPrincipal}"
                               Margin="0,0,0,10"/>
                    <TextBox DockPanel.Dock="Top"
                             x:Name="txtBuscaUsuario"
                             Style="{StaticResource EstiloInputIcone}"
                             Tag="&#xE721;"
                             Margin="0,5,0,15"/>

                    <ListView x:Name="ListViewUsuarios" 
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icone}" 
                                               FontFamily="{StaticResource FonteIcones}"
                                               FontSize="18"
                                               Foreground="{StaticResource CorAcaoPrimaria}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nome}" 
                                                   FontSize="15" FontWeight="SemiBold"
                                                   Foreground="{StaticResource CorTextoPrincipal}"/>
                                        <TextBlock Text="{Binding NivelAcesso}" 
                                                   FontSize="13"
                                                   Foreground="{StaticResource CorTextoSecundario}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <Border Grid.Column="1" 
                    Style="{StaticResource EstiloCard}"
                    Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0" Padding="30">
                        <StackPanel>
                            <TextBlock Text="Nome de Usuário (Login)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoPrincipal}" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNomeLogin" Style="{StaticResource EstiloInputIcone}" Tag="&#xE77B;"/>

                            <TextBlock Text="Senha (Obrigatório para novos)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoPrincipal}" Margin="0,15,0,5"/>
                            <PasswordBox x:Name="txtSenha" Style="{StaticResource EstiloPasswordIcone}" Tag="&#xE72E;"/>
                            <TextBlock Text="Deixe em branco para manter a senha atual ao editar." FontSize="12" Foreground="{StaticResource CorTextoSecundario}" Margin="0,5,0,0"/>


                            <TextBlock Text="Nível de Acesso" FontWeight="SemiBold" Foreground="{StaticResource CorTextoPrincipal}" Margin="0,15,0,5"/>
                            <ComboBox x:Name="cmbNivelAcesso" Margin="0,0,0,20"/>

                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="1" 
                            Background="{StaticResource CorFundoClaro}"
                            BorderBrush="{StaticResource CorBorda}"
                            BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                            <Button x:Name="btnLimpar" Content="Limpar (Novo)" Height="45" Width="150" Margin="0,0,10,0"
                                    Style="{StaticResource EstiloBotaoPrimario}"
                                    Background="{StaticResource CorTextoSecundario}"
                                    Click="BtnLimpar_Click"/>

                            <Button x:Name="btnInativar" Content="Inativar" Height="45" Width="120" Margin="0,0,10,0"
                                    Style="{StaticResource EstiloBotaoPerigo}"
                                    Click="BtnInativar_Click"/>

                            <Button x:Name="btnSalvar" Content="Salvar" Height="45" Width="150"
                                    Style="{StaticResource EstiloBotaoPrimario}"
                                    Click="BtnSalvar_Click"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>