<Page x:Class="PageAuditoria"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.expression/blend/2008" 
      xmlns:local="clr-namespace:Corrente_Agasalho"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="PageAuditoria"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Auditoria e Estornos"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource CorTextoPrincipal}"/>
            <TextBlock Text="Consulte o histórico de transações e reverta (estorne) registros se necessário."
                       FontSize="16"
                       Foreground="{StaticResource CorTextoSecundario}"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="{StaticResource CorBranco}"
                BorderBrush="{StaticResource CorBorda}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Data Início" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpFiltroDataInicio" Width="150"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Data Fim" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpFiltroDataFim" Width="150"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Pessoa (Doador/Benef.)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFiltroPessoa" Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Tipo (Operação)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFiltroTipo" Width="150"/>
                </StackPanel>

                <Button x:Name="btnAplicarFiltros" 
                        Content="Filtrar" 
                        Style="{StaticResource EstiloBotaoPrimario}"
                        Height="45" Width="100"
                        Margin="10,20,10,0"
                        Click="BtnAplicarFiltros_Click"/>
                <Button x:Name="btnLimparFiltros" 
                        Content="Limpar" 
                        Style="{StaticResource EstiloBotaoPrimario}"
                        Background="{StaticResource CorTextoSecundario}"
                        Height="45" Width="100"
                        Margin="0,20,0,0"
                        Click="BtnLimparFiltros_Click"/>
            </WrapPanel>
        </Border>

        <Border Grid.Row="2" 
                Style="{StaticResource EstiloCard}"
                Padding="5">
            <DataGrid x:Name="dgAuditoria" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data" Width="150" Binding="{Binding DataTransacao, StringFormat='dd/MM/yyyy HH:mm'}"/>
                    <DataGridTextColumn Header="Operação" Width="120" Binding="{Binding Tipo}"/>
                    <DataGridTextColumn Header="Pessoa" Width="*" Binding="{Binding Pessoa}"/>
                    <DataGridTextColumn Header="Descrição" Width="*" Binding="{Binding Descricao}"/>
                    <DataGridTextColumn Header="Pontos" Width="100" Binding="{Binding Pontos}"/>

                    <DataGridTemplateColumn Header="Ação" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnEstornar" 
                                        Content="Estornar" 
                                        Style="{StaticResource EstiloBotaoPerigo}"
                                        Height="30"
                                        FontSize="12"
                                        Padding="5"
                                        Click="BtnEstornar_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</Page>