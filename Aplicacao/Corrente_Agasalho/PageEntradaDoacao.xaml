<Page x:Class="PageEntradaDoacao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Corrente_Agasalho"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="PageEntradaDoacao"
      Background="Transparent">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Registrar Doação (Entrada)"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource CorTextoPrincipal}"/>
            <TextBlock Text="Registre a entrada de novas doações e adicione os itens para triagem."
                       FontSize="16"
                       Foreground="{StaticResource CorTextoSecundario}"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Style="{StaticResource EstiloCard}"
                Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="30">
                    <TextBlock Text="Dados da Doação"
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource CorTextoPrincipal}"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Doador (Pessoa)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoPrincipal}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbDoador"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      DisplayMemberPath="Nome" 
                                      TextSearch.TextPath="Nome"
                                      Style="{x:Null}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,10,0">
                            <TextBlock Text="Ponto de Coleta" FontWeight="SemiBold" Foreground="{StaticResource CorTextoPrincipal}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbPontoColeta"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      DisplayMemberPath="Nome" 
                                      TextSearch.TextPath="Nome"
                                      Style="{x:Null}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Data da Doação" FontWeight="SemiBold" Foreground="{StaticResource CorTextoPrincipal}" Margin="0,0,0,5"/>
                            <DatePicker x:Name="dpDataDoacao"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          x:Name="dgItensDoacao"
                          Margin="30,0,30,0"
                          BorderThickness="0,1,0,0"
                          BorderBrush="{StaticResource CorBorda}"
                          ItemsSource="{Binding ItensDaDoacao}"
                          
                          CanUserAddRows="False"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          FontSize="14"
                          RowHeight="40">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Qtd." 
                                            Width="60" 
                                            Binding="{Binding Quantidade}"/>
                        <DataGridComboBoxColumn Header="Categoria" 
                                                Width="*"
                                                x:Name="colCategoria"
                                                SelectedValueBinding="{Binding Categoria}"/>

                        <DataGridComboBoxColumn Header="Tamanho" 
                                                Width="150"
                                                x:Name="colTamanho"
                                                SelectedValueBinding="{Binding Tamanho}"/>

                        <DataGridComboBoxColumn Header="Condição" 
                                                Width="150"
                                                x:Name="colCondicao"
                                                SelectedValueBinding="{Binding Condicao}"/>

                        <DataGridComboBoxColumn Header="Destino (Triagem)" 
                                                Width="180"
                                                x:Name="colDestino"
                                                SelectedValueBinding="{Binding Destino}"/>

                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnExcluirItem" 
                                            Content="&#xE74D;"
                                            FontFamily="{StaticResource FonteIcones}"
                                            Foreground="{StaticResource CorAcaoPerigo}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="btnExcluirItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>

                <Border Grid.Row="2" 
                        Background="{StaticResource CorFundoClaro}"
                        BorderBrush="{StaticResource CorBorda}"
                        BorderThickness="0,1,0,0">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnAdicionarItem" 
                                Grid.Column="0"
                                Content="Adicionar Peça" 
                                Height="45" Width="150"
                                Style="{StaticResource EstiloBotaoPrimario}"
                                Background="{StaticResource CorTextoSecundario}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="Total de Pontos a Creditar:"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource CorTextoSecundario}"
                                       Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtTotalPontos"
                                       Text="0"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource CorAcaoPrimaria}"/>
                        </StackPanel>

                        <Button x:Name="btnSalvarDoacao" 
                                Grid.Column="2"
                                Content="Salvar Doação" 
                                Height="45" Width="150"
                                Style="{StaticResource EstiloBotaoPrimario}"
                                Margin="20,0,0,0"
                                Click="btnSalvarDoacao_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>