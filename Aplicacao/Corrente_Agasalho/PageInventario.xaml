<Page x:Class="PageInventario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Corrente_Agasalho"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="PageInventario"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Consultar Inventário"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource CorTextoPrincipal}"/>
            <TextBlock Text="Filtre e visualize o estoque de peças disponíveis."
                       FontSize="16"
                       Foreground="{StaticResource CorTextoSecundario}"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="{StaticResource CorBranco}"
                BorderBrush="{StaticResource CorBorda}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Categoria (Tipo)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFiltroCategoria" Width="180"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Tamanho" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFiltroTamanho" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Status (Triagem)" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFiltroStatus" Width="180"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Peça Essencial?" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbFiltroEssencial" Width="120"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Data de Entrada" FontWeight="SemiBold" Foreground="{StaticResource CorTextoSecundario}" FontSize="12" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpFiltroData" Width="150"/>
                </StackPanel>

                <Button x:Name="btnAplicarFiltros" 
                        Content="Filtrar" 
                        Style="{StaticResource EstiloBotaoPrimario}"
                        Height="45" Width="100"
                        Margin="10,20,10,0"
                        Click="BtnAplicarFiltros_Click"/>
                <Button x:Name="btnLimparFiltros" 
                        Content="Limpar" 
                        Style="{StaticResource EstiloBotaoPrimario}"
                        Background="{StaticResource CorTextoSecundario}"
                        Height="45" Width="100"
                        Margin="0,20,0,0"
                        Click="BtnLimparFiltros_Click"/>
            </WrapPanel>
        </Border>

        <Border Grid.Row="2" 
                Style="{StaticResource EstiloCard}"
                Padding="5">
            <DataGrid x:Name="dgInventario" Margin="5">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="&#xE783;" 
                                           FontFamily="{StaticResource FonteIcones}"
                                           Foreground="{StaticResource CorAcaoDestaque}"
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           ToolTip="Peça de Frio Essencial"
                                           Visibility="{Binding IsEssencialVisibility}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Categoria" Width="*" Binding="{Binding Categoria}"/>
                    <DataGridTextColumn Header="Tamanho" Width="100" Binding="{Binding Tamanho}"/>
                    <DataGridTextColumn Header="Condição" Width="150" Binding="{Binding Condicao}"/>
                    <DataGridTextColumn Header="Status (Destino)" Width="180" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Data Entrada" Width="150" Binding="{Binding DataEntrada, StringFormat='dd/MM/yyyy'}"/>
                    <DataGridTextColumn Header="Qtd. Doada" Width="100" Binding="{Binding QuantidadeDoada}"/>
                    <DataGridTextColumn Header="Qtd. Estoque" Width="100" Binding="{Binding QuantidadeEmEstoque}" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Pontos (Custo)" Width="120" Binding="{Binding Pontos}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</Page>